{
    "private": true,
    "name": "@whitelabel-solutions/wallet-connector-monorepo",
    "description": "A monorepo for all NPM packages related to @whitelabel-solutions/wallet-connector",
    "author": "Whitelabel Solutions <https://github.com/whitelabel-market>",
    "license": "MIT",
    "scripts": {
        "lerna": "lerna",
        "start": "lerna run start",
        "build": "lerna run build",
        "build:packages": "yarn build -- --scope @whitelabel-solutions/wallet-connector",
        "clean": "lerna run clean",
        "clean:packages": "yarn clean -- --scope @whitelabel-solutions/wallet-connector",
        "lint": "lerna run lint",
        "lint-staged": "lerna run lint-staged",
        "postinstall": "lerna bootstrap --progress --no-ci",
        "release": "cross-env lerna version --no-private --conventional-commits --create-release github --yes && lerna publish from-git --yes"
    },
    "workspaces": [
        "packages/*"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.4",
        "@commitlint/config-conventional": "^16.2.4",
        "@lerna-lite/cli": "^1.11.3",
        "@lerna-lite/run": "^1.11.3",
        "commitizen": "^4.2.4",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^8.0.1",
        "lerna": "^5.1.8",
        "typescript": "^4.6.4"
    }
}
