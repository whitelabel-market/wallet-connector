{
    "compilerOptions": {
        "target": "es2017",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules", "**/dist", "**/node_modules"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
